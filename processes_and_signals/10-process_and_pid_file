#!/usr/bin/env bash
# Script that demonstrates PID file and signal handling
#!/usr/bin/env bash
# Script that creates a PID file and handles signals

PID_FILE="/var/run/myscript.pid"

handle_exit() {
    rm -f "$PID_FILE"
    exit 0
}

handle_term() {
    echo "I hate the kill command"
}

handle_int() {
    echo "Y U no love me?!"
}

trap handle_exit SIGTERM SIGQUIT
trap handle_term SIGTERM
trap handle_int SIGINT

echo $$ > "$PID_FILE"

while true; do
    echo "To infinity and beyond"
    sleep 2
done

